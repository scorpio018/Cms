<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
     
    <!-- 标题 -->
    <RelativeLayout 
        android:id="@+id/channelSearchTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_title_height"
        android:background="@color/common_blue">
        
        <ImageView 
            android:id="@+id/channelSearchTitleBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/news_title_left_icon_margin_left"
            android:layout_marginStart="@dimen/news_title_left_icon_margin_left"
            />
        
        <TextView 
            android:id="@+id/channelSearchTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/channel_search_title_text"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        
        <ImageView 
            android:id="@+id/channelTitleMenuReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/news_search_reset"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/news_title_right_icon_margin_right"
            android:layout_marginEnd="@dimen/news_title_right_icon_margin_right"
            />
        
    </RelativeLayout>
    
    <!-- android:paddingTop="@dimen/channel_search_edit_margin_top" -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/channel_search_line_layout_height"
        android:background="@color/gray"
        android:orientation="horizontal"
        >
        
        <EditText 
            android:id="@+id/channelSearchEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/channel_search_edit_margin_left"
            android:layout_marginStart="@dimen/channel_search_edit_margin_left"
            android:layout_marginRight="@dimen/channel_search_edit_margin_right"
            android:layout_marginEnd="@dimen/channel_search_edit_margin_right"
            android:layout_marginBottom="@dimen/channel_search_edit_margin_bottom"
            android:hint="@string/channel_search_edit_hint"
            android:layout_gravity="center"
            android:gravity="center"
            />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/channel_search_no_change_text1"
            android:layout_marginLeft="@dimen/margin_left_common"
            android:layout_marginStart="@dimen/margin_left_common"/>
        
        <TextView 
            android:id="@+id/channelSearchCheckedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_blue"
            />
    </LinearLayout>
    
    <ListView 
        android:id="@+id/childChannelListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
