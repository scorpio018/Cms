<?xml version="1.0" encoding="utf-8"?>
<!-- 添加/修改新闻时的导读图模块 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/readingPicLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/reading_pic_layout_height"
    android:background="@color/gray_lighter" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/reading_pic_text_view_height"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/addReadingPicTV"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:drawableLeft="@drawable/common_add"
            android:drawableStart="@drawable/common_add"
            android:gravity="center"
            android:text="@string/add_reading_pic"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/add_reading_pic_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/readingPicIV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reading_pic_layout_height"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/reading_pic_add_news_title_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/addReadingPicETLayout"
            android:layout_width="0dip"
            android:layout_height="@dimen/common_edit_text_height"
            android:layout_weight="0.9"
            android:background="@drawable/white_bg_radius_and_stroke"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_edit_text_height"
                android:gravity="center_vertical"
                android:text="@string/add_reading_pic_edittext_hint"
                android:textColor="@color/gray" />

            <EditText
                android:id="@+id/addReadingPicET"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_edit_text_height"
                android:gravity="center_vertical"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/reading_pic_layout_height"
        android:background="@color/gray_lighter"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1" >

        
    </LinearLayout>
    -->

</RelativeLayout>