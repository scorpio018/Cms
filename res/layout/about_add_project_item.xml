<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/common_list_view_item_padding"
    android:paddingBottom="@dimen/common_list_view_item_padding"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/aboutProjectNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginStart="@dimen/common_margin"
        android:textSize="@dimen/about_project_name_text_size" />

    <TextView
        android:id="@+id/aboutProjectVersionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginEnd="@dimen/common_margin" />

</RelativeLayout>