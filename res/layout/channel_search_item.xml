<?xml version="1.0" encoding="utf-8"?>
<!-- 频道搜索中的频道列表 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsTextLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/channel_search_item_height" >

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/news_next_width"
        android:layout_marginLeft="@dimen/news_item_news_title_margin_left"
        android:layout_marginRight="@dimen/news_next_width"
        android:layout_marginStart="@dimen/news_item_news_title_margin_left"
        android:layout_marginTop="@dimen/news_item_news_title_margin_top"
        android:textSize="@dimen/news_title_text_size" />

    <ImageView
        android:id="@+id/iv_news_next"
        android:layout_width="@dimen/news_next_width"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/common_next"
        android:clickable="true"
        android:visibility="gone" />

</RelativeLayout>