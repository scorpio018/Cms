<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/edit_news_common_margin_top"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="horizontal"
            android:weightSum="1" >

            <LinearLayout
                android:id="@+id/contentAndAbstractBtnsLayout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/common_text_view_btn_height"
            android:layout_weight="0.9"
            android:background="@drawable/edit_news_reset_and_typesetting_radius_and_stroke"
            android:gravity="end"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/resetTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/reset"
                android:drawablePadding="@dimen/common_drawable_padding"
                android:drawableStart="@drawable/reset"
                android:gravity="center"
                android:paddingEnd="@dimen/edit_news_content_and_abstract_title_padding"
                android:paddingLeft="@dimen/edit_news_content_and_abstract_title_padding"
                android:paddingRight="@dimen/edit_news_content_and_abstract_title_padding"
                android:paddingStart="@dimen/edit_news_content_and_abstract_title_padding"
                android:text="@string/reset" />

            <TextView
                android:id="@+id/composingTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/typesetting"
                android:drawablePadding="@dimen/common_drawable_padding"
                android:drawableStart="@drawable/typesetting"
                android:gravity="center"
                android:paddingEnd="@dimen/edit_news_content_and_abstract_title_padding"
                android:paddingLeft="@dimen/edit_news_content_and_abstract_title_padding"
                android:paddingRight="@dimen/edit_news_content_and_abstract_title_padding"
                android:paddingStart="@dimen/edit_news_content_and_abstract_title_padding"
                android:text="@string/typesetting" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1" >

        <EditText
            android:id="@+id/contentAndAbstractET"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="@null"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:textColorHint="@color/gray"
            android:scrollbars="vertical"
            android:singleLine="false" />
    </LinearLayout>

</LinearLayout>