<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1" >

        <!-- 用户名 -->

        <EditText
            android:id="@+id/userNameET"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_common_margin_top"
            android:layout_weight="0.9"
            android:background="@drawable/common_radius_and_stroke"
            android:drawableLeft="@drawable/icon_person_a"
            android:drawableStart="@drawable/icon_person_a"
            android:drawableRight="@drawable/down"
            android:drawableEnd="@drawable/down"
            android:drawablePadding="@dimen/common_drawable_padding"
            android:inputType="text" />
        <!--
             <AutoCompleteTextView
            android:id="@+id/userNameET"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/news_search_common_margin_top"
            android:layout_weight="0.9"
            android:background="@drawable/common_radius_and_stroke"
            android:drawableLeft="@drawable/icon_person_a"
            android:drawableStart="@drawable/icon_person_a"
            android:inputType="text" />
        -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1" >

        <!-- 密码 -->

        <EditText
            android:id="@+id/pwdET"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_text_common_margin_top"
            android:layout_weight="0.9"
            android:background="@drawable/common_radius_and_stroke"
            android:drawableLeft="@drawable/icon_lock_a"
            android:drawableStart="@drawable/icon_lock_a"
            android:drawablePadding="@dimen/common_drawable_padding"
            android:inputType="textPassword" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/rememberPwdCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_remember_name_margin_left"
        android:layout_marginStart="@dimen/login_remember_name_margin_left"
        android:text="@string/login_remember_pwd_checkbox" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1" >

        <!-- 登录 -->

        <Button
            android:id="@+id/loginSubmitBtn"
            android:layout_width="0dip"
            android:layout_height="@dimen/common_submit_btn_height"
            android:layout_marginTop="@dimen/edit_text_common_margin_top"
            android:layout_weight="0.6"
            android:background="@drawable/common_submit_btn_radius_and_stroke"
            android:text="@string/submit_btn_common"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>