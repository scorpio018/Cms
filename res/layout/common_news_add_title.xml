<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_title_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/titleLeftTV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/news_title_left_icon_margin_left"
        android:layout_marginStart="@dimen/news_title_left_icon_margin_left"
        android:drawableLeft="@drawable/common_left"
        android:drawablePadding="@dimen/common_drawable_padding"
        android:drawableStart="@drawable/common_left"
        android:gravity="center_vertical"
        android:text="@string/back"
        android:textColor="@color/white" />

</LinearLayout>