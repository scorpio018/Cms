<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/viewPagerImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/welcome_pager_pic"
        android:scaleType="fitXY"/>
    
    <LinearLayout
        android:id="@+id/welcomePagerLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/margin_right_common"
        android:layout_marginEnd="@dimen/margin_end_common"
        android:layout_marginTop="@dimen/margin_top_common"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/welcomePagerSkipText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/skip_btn_height"
            android:gravity="center_vertical"
            android:text="@string/skip_to_main_activity"/>
        <ImageButton 
	        android:id="@+id/welcomePagerSkip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/skip_to_main_activity"
	        android:background="@drawable/iconfont_tiaoguo"/>
    </LinearLayout>

</RelativeLayout>
